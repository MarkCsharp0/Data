@model List<MVC.Models.UserModel>

@{
    ViewBag.Title = "Index";
}

<style>
    .AvatarImage {
        max-height: 400px;
        max-width: 400px;
        border-radius: 5px;
        cursor: crosshair;
    }
</style>

<h2 class="text">User's Feed</h2>
<style>

    .text {
        text-align: center;
    }
</style>

@foreach (var user in Model)
{


    <div>
        <a href=@($"/user/viewprofile/{user.Id}")>View @user.Nickname's Profile</a>
        <br/>
        <img class="AvatarImage" title="@user.Nickname" src="@Url.Action("Get", "Image", new {id=user.ImageAvatarId })"
             onerror="this.onerror=null;this.src='https://placeimg.com/200/300/animals';" />

    </div>

}